public class BlackJack {
	

	public static int play(int firstNumber, int secondNumber) throws IllegalArgumentException {
		if (firstNumber < 1 || secondNumber < 1) {
			throw new IllegalArgumentException("Values must be greater than 0.");
		}
		int firstDifference = 21 - firstNumber;
		int secondDifference = 21 - secondNumber;
		if (firstDifference < 0 && secondDifference < 0) {
			return 0;
		}
		if ((firstDifference >= 0 && 
			secondDifference >= 0 && 
			firstDifference < secondDifference) 
			||
			(firstDifference >= 0 && 
			secondDifference < 0)) {
			return firstNumber;
		}
		return secondNumber;
	}
	
}
