package paint;

import java.util.ArrayList;

public class PaintWizard {

	private ArrayList<Paint> paints = new ArrayList<>();
	
	public void add(Paint paint) {
		paints.add(paint);
	}
	
	public Paint getMostEfficientPaint(int roomArea) {
		int smallestWaste = roomArea + 1;
		Paint mostEfficientPaint;
		for(Paint paint : paints) {
			int waste = roomArea % paint.getAreaCovered();
			if (waste < smallestWaste) {
				smallestWaste = waste;
				mostEfficientPaint = paint;
			}
		}
		return mostEfficientPaint;
	}

}
